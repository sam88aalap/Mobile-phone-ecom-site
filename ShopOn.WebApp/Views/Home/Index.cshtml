@model IEnumerable<ShopOn.CommonLayer.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="container my-3">
    <div class="row adds">
        <div class="col-md-4">
            <h2>Mobile Phones</h2>
            <img src="https://d2d22nphq0yz8t.cloudfront.net/88e6cc4b-eaa1-4053-af65-563d88ba8b26/https://media.croma.com/image/upload/v1625301728/Croma%20Assets/CMS/LP%20Page%20Banners/2021/PCP%20Mobile/New_scwunn.jpg/mxw_2048,f_auto" alt="New" />
        </div>
        <div class="col-md-4">
            <h2>Latest Phones</h2>
            <img src="https://d2d22nphq0yz8t.cloudfront.net/88e6cc4b-eaa1-4053-af65-563d88ba8b26/https://media.croma.com/image/upload/v1625561994/Croma%20Assets/CMS/LP%20Page%20Banners/2021/PCP%20Mobile/Popular_6July_hgjxqb.jpg/mxw_2048,f_auto" alt="Popular" />
        </div>
        <div class="col-md-4">
            <h2>Deal of the day</h2>
            <img src="https://d2d22nphq0yz8t.cloudfront.net/88e6cc4b-eaa1-4053-af65-563d88ba8b26/https://media.croma.com/image/upload/v1625561994/Croma%20Assets/CMS/LP%20Page%20Banners/2021/PCP%20Mobile/HotDeals_6July_ohu9jg.jpg/mxw_2048,f_auto" alt="Hot Deals" />
        </div>
    </div>
</div>

<div class="container">
    @if (pager.TotalPages > 0)
    {
<ul class="pagination justify-content-end">
    @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
    {
<li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@pge"> @pge </a>
</li>}

</ul>}
</div>

<div class="container">
    <div class="row">
        @if (Model.Count() ==0)
        {
          <div>
              <h4>no products found</h4>
          </div>
        }
        else
        {


        @foreach (var product in Model)
        {
            <div class="col-md-3 col-sm-12">
                <div class="card my-3">
                    <a asp-controller="Home" asp-action="Details" asp-route-pid="@product.ProductId">
                        <div class="card-body text-center">
                            <img src="~/@Url.Content(product.ImageUrl)" />
                            <h4 class="card-text">
                                <label class="p-name">@product.ProductName</label>
                            </h4>
                            <p class="card-text">
                                <span class="inr-sign"></span>
                                <span class="price">@product.ProductPrice</span>
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        }
        }
    </div>

</div>
<div class="container">    @if(pager.TotalPages > 0)        {            <ul class="pagination justify-content-end">                @for(var pge = pager.StartPage; pge<= pager.EndPage; pge++)            {                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">                    <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pg="@pge"> @pge </a>                </li>            }            </ul>        }</div>